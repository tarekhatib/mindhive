<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="../assets/favicon.ico" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/leaderboard.css" />
  <title>MindHive Â· Leaderboard</title>
</head>

<body>
  <%- include('partials/sidebar', { page: 'leaderboard' }) %>

  <div class="leaderboard-container">
    
    <h1>ğŸ† Leaderboard</h1>
    <div class="lb-card">
      <div class="lb-row lb-header">
        <div class="lb-col rank-col">#</div>
        <div class="lb-col user-col">User</div>
        <div class="lb-col points-col">Points</div>
      </div>

      <div id="leaderboard-body">

        <% if (users && users.length > 0) { %>

          <% users.forEach((user, i) => { %>

            <div class="lb-row lb-item" data-user-id="<%= user.id %>">

              <div class="lb-col rank-col">
                <% if (user.position === 1) { %>
                  ğŸ¥‡
                <% } else if (user.position === 2) { %>
                  ğŸ¥ˆ
                <% } else if (user.position === 3) { %>
                  ğŸ¥‰
                <% } else { %>
                  <%= user.position %>
                <% } %>
              </div>

              <div class="lb-col user-col user-flex">
                <% if (user.profile_image) { %>
                  <img class="lb-avatar" src="<%= user.profile_image %>" />
                <% } else { %>
                  <div class="lb-avatar-initials">
                    <%= user.first_name.charAt(0).toUpperCase() + user.last_name.charAt(0).toUpperCase() %>
                  </div>
                <% } %>

                <div class="lb-info">
                  <p class="lb-name"><%= user.first_name %> <%= user.last_name %></p>
                  <p class="lb-username">@<%= user.username %></p>
                </div>
              </div>

              <div class="lb-col points-col">
                <%= user.total_points %> pts
              </div>

            </div>

          <% }) %>

        <% } else { %>
          <div class="lb-empty">No ranked users yet.</div>
        <% } %>

      </div>
    </div>

    <div class="lb-pagination">

      <button
        id="paginationPrev"
        class="lb-page-btn"
        <%= page <= 1 ? "disabled" : "" %>>
        <i class="fa-solid fa-chevron-left"></i>
      </button>

      <span class="lb-page-number">
        Page <%= page %> / <%= totalPages %>
      </span>

      <button
        id="paginationNext"
        class="lb-page-btn"
        <%= page >= totalPages ? "disabled" : "" %>>
        <i class="fa-solid fa-chevron-right"></i>
      </button>

    </div>

  </div>

  <script src="/js/leaderboard.js"></script>
</body>
</html>