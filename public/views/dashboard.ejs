<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../assets/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <title>MindHive Dashboard</title>
  </head>
  <body>
    <%- include('partials/sidebar', { page: 'home' }) %>
    <%- include('partials/pomodoro_popup') %>

    <main class="dashboard">
      <header class="dashboard-header">
        <div class="search-bar">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" placeholder="Search" />
          <div id="search-results" class="search-dropdown hidden"></div>
        </div>
      </header>

      <section class="dashboard-greeting card">
        <h1 id="greeting-text"><%= user.first_name %> ðŸ‘‹</h1>
        <div class="greeting-info">
          <p id="dashboard-date"></p>
          <p id="dashboard-weather"></p>
        </div>
      </section>

      <section class="dashboard-content">
        <div class="dashboard-row">
          <section class="card todo-card">
            <h2 style="padding-left: 10px">Today's To-Do List</h2>
            <% if (tasks && tasks.length > 0) { %>
            <ul id="todo-list">
              <% tasks.forEach(function(task) { %>
              <li class="todo-item">
                <input type="checkbox" class="todo-checkbox" id="task-<%=
                task.id %>" <%= task.status === 'done' ? 'checked' : '' %> />
                <label for="task-<%= task.id %>"><%= task.title %></label>
              </li>
              <% }); %>
            </ul>
            <% } else { %>
            <p class="no-tasks">All tasks completed! ðŸŽ‰</p>
            <% } %>
          </section>

          <section class="card pomodoro-card">
            <h2 class="pomodoro-title">Pomodoro Session</h2>
            <div class="pomodoro-time-controls">
              <button id="decrease-btn" class="time-btn">
                <i class="fa-solid fa-minus"></i>
              </button>
              <span id="pomodoro-time" class="pomodoro-time">25:00</span>
              <button id="increase-btn" class="time-btn">
                <i class="fa-solid fa-plus"></i>
              </button>
            </div>
            <div class="pomodoro-actions">
              <button id="start-btn" class="pomodoro-btn start">
                Start Focus
              </button>
              <button id="finish-btn" class="pomodoro-btn finish hidden">
                Finish Session
              </button>
              <button id="pause-btn" class="pomodoro-btn pause hidden">
                <i class="fa-solid fa-pause"></i>
              </button>
              <button id="cancel-btn" class="pomodoro-btn cancel hidden">
                Reset Timer
              </button>
            </div>
          </section>
        </div>

        <!-- <section class="card calendar-card">
          <h2>Today's Calendar</h2>
          <ul>
            <li>9:00 AM â€” CS Lecture</li>
            <li>2:00 PM â€” Team Meeting</li>
            <li>5:00 PM â€” Gym Session</li>
          </ul>
        </section> -->

        <section class="card leaderboard-card">
          <h2>Leaderboard</h2>
          <br>
          <!-- TABLE CARD -->
          <div class="lb-card">

            <!-- HEADER -->
            <div class="lb-row lb-header">
              <div class="lb-col rank-col">#</div>
              <div class="lb-col user-col">User</div>
              <div class="lb-col points-col">Points</div>
            </div>

            <!-- 3 ROWS -->
            <% leaderboardSmall.forEach(user => { %>
              <div class="lb-row lb-item <%= user.id === locals.user.id ? 'lb-current-user' : '' %>">

                <div class="lb-col rank-col">
                  <% if (user.position === 1) { %>
                    ðŸ¥‡
                  <% } else if (user.position === 2) { %>
                    ðŸ¥ˆ
                  <% } else if (user.position === 3) { %>
                    ðŸ¥‰
                  <% } else { %>
                    <%= user.position %>
                  <% } %>
                </div>

                <div class="lb-col user-col user-flex">
                  <% if (user.profile_image) { %>
                    <img class="lb-avatar" src="<%= user.profile_image %>" />
                  <% } else { %>
                    <div class="lb-avatar-initials">
                      <%= user.first_name.charAt(0).toUpperCase() + user.last_name.charAt(0).toUpperCase() %>
                    </div>
                  <% } %>

                  <div class="lb-info">
                    <p class="lb-name"><%= user.first_name %> <%= user.last_name %></p>
                    <p class="lb-username">@<%= user.username %></p>
                  </div>
                </div>

                <div class="lb-col points-col">
                  <%= user.total_points %> pts
                </div>

              </div>
            <% }) %>

          </div>
        </section>
      <br />
    </main>

    <input type="hidden" id="user_id" value="<%= user.id %>">
    <script src="/js/dashboard.js"></script>
    <script src="/js/pomodoro.js"></script>
  </body>
</html>
